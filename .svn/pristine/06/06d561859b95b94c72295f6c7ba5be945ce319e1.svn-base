html{
	font-size: 15.625vw;  /*50px*/
}
body{
	display: flex;
	flex-flow: column nowrap; 
}
header{
	display: flex!important;
   	justify-content: space-between;
   	align-items: center;
	height: 0.88rem; 	/*默认高度88px / 2 / 50*/
	background:#62e49e;
	position:relative;	
}
header h1{
	font-size: 0.3rem;  /*30px / 2 / 50*/
	color:#fff;
	text-align: center;	
}
header .icon-fanhui,header .icon-gerenzhongxin{
	color:#fff;
	text-decoration: none;
	margin-left: 0.32rem;
	vertical-align: middle;
}
header .icon-gerenzhongxin{
	margin-right: 0.32rem;
}
section{
	display: flex;
	flex: 1;
	height: calc(100vh - 1.82rem);
}
section video{
	width:100%;
}
section .func{
	background:#f2f2f2;
	width:100%;
	height:0.7rem;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
section .iconfont{
	color:#62e49e;
	font-size:0.4rem!important;
}
section .func span{
	display: flex;
	width:3rem;
}
section .func span>input{
	width:100%;	
}
footer{
    position: fixed; 
    bottom: -0.21rem;
    z-index: 10;
    width: 100%; 
    height: 1.4rem; 
    background: url("../images/img/footer.png") no-repeat;
    background-size: 100% ;
    }
footer ul{
	display: flex;
    justify-content: space-around;
    align-items: center;  
    overflow: hidden;
    height: 1.4rem; 
    padding: 0;
    margin: 0;
}
footer ul li{
    width: 15%;
    margin-top: 0.12rem;
    list-style: none;
    text-align: center;
    display: flex;
    flex-direction: column;
}
footer ul li a.iconfont{
	color:#fff;
	}
footer ul li em{
	color:#fff;
	font-size:0.20rem ;
	font-style: normal;
	margin-top: 0.1rem;
}



